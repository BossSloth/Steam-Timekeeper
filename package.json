{
  "workspaces": [
    "components/*"
  ],
  "scripts": {
    "dev-build": "millennium-ttc --build dev --watch",
    "sass": "sass ./public/steam-timekeeper.scss:./public/steam-timekeeper.css --style compressed --embed-sources --embed-source-map",
    "dev": "nodemon --watch public/steam-timekeeper.scss --ext scss --exec \"npm run sass && npm run dev-build\"",
    "build": "npm run sass && millennium-ttc --build prod",
    "lint": "bun eslint"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/node": "^25.2.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "nodemon": "^3.1.11",
    "semantic-release": "^25.0.3",
    "steam-types": "^2.0.0",
    "typescript-eslint": "^8.54.0"
  },
  "type": "module",
  "name": "steam-timekeeper",
  "version": "1.0.0",
  "description": "A plugin for Millennium that tracks your time spent on Steam",
  "main": "./frontend/index.jsx",
  "author": "BossSloth",
  "license": "MIT",
  "dependencies": {
    "@steambrew/api": "^5.8.4",
    "@steambrew/client": "^5.8.4",
    "@steambrew/ttc": "^2.8.7",
    "@steambrew/webkit": "^5.8.4",
    "idb": "^8.0.3",
    "react-icons": "^5.5.0",
    "sass-embedded": "^1.97.3",
    "zustand": "^5.0.11"
  },
  "patchedDependencies": {
    "@steambrew/client@5.8.3": "patches/@steambrew%2Fclient@5.8.3.patch"
  }
}
